# ======== INITIALIZATION ========
units           metal
dimension       3
boundary        p p p
atom_style      atomic

read_data	CaMg_1percent.lmp

# ======== FORCE FIELD ========
pair_style      meam
pair_coeff      * * library.meam Ca Mg CaMg.meam Ca Mg

# ======== COMPUTE SETTINGS ========
compute csym    all centro/atom 12
compute peratom all pe/atom 

# ======== EQUILIBRATION ========
reset_timestep	0
timestep		0.001
velocity		all	create	300	123456	dist gaussian	mom	yes	rot	yes
fix				1	all	npt	temp	300	300	1	iso	0	0	1	drag	1

min_style       cg  
minimize        1.0e-8 1.0e-8 5000 10000 

#set thermo output
thermo			1000
thermo_style	custom	step lx	ly	lz	press	pxx	pyy	pzz	pe	temp

#run for at least 10 picosecond (assuming 1 fs timestep)
run		2000
unfix	1

#store final cell length for strain calculations
variable	tmp	equal 	"lx"
variable	L0	equal	${tmp}
print	"Initial Length, L0: ${L0}"

# ======== DEFORMATION (Tensile Test) ========
#deformation
reset_timestep	0

# Maintain constant temperature in y and z directions
fix			1 all	npt	temp	300	300	1	y 0	0 1	z 0 0 1	drag 1

# Lower strain rate for more realistic deformation
variable	strate	equal	2.5e10
variable	strate1	equal	"v_strate / 1.0e12"
fix			2	all	deform 1 x erate ${strate1} units box remap	x

# ======== OUTPUT DATA ========
# Strain and stress calculation (in GPa)
#for units metal, pressure is in [bars]=100[kPa]=1/10000[GPa]
#p2, p3, p4 are in GPa
variable strain	equal	"(lx - v_L0)/v_L0"
variable p1	equal	"v_strain"
variable p2	equal	"-pxx/10000"
variable p3	equal	"-pyy/10000"
variable p4	equal	"-pzz/10000"
fix		def all print	100	"${p1} ${p2} ${p3} ${p4}" file CaMg_stress_strain.txt	screen no

# Atomic trajectory and defect analysis
dump	dump_deform all custom 1000	tensile_deform.lammpstrj id type	x y z fx fy fz

#display thermo
thermo	100
thermo_style	custom	step	v_strain	temp	v_p2 v_p3 v_p4 ke pe press

run		50000
undump	dump_deform
unfix	def

# ======== SIMULATION DONE ========
print "Alhamdulillah, All Done! ^.^"